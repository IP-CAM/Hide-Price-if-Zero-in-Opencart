<?xml version="1.0" encoding="utf-8"?>
<modification>
  <name>Hide Price if Zero</name>
	<version>1.0</version>
	<link>http://www.agenciaprai.com/</link>
	<author>REDS</author>
	<code>hide-price-if-zero</code>

	<file path="system/library/cart/currency.php">
		<operation>
			<search><![CDATA[
			public function format($number, $currency, $value = '', $format = true) {
			]]></search>
			<add position="after"><![CDATA[
			// hide price if zero
			if ($number == 0) return false;
			]]></add>
		</operation>
	</file>	

</modification>